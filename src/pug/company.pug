extends layouts/_inner.pug

block head-meta
	+head-meta(
	'Компания - VerumTrade', 
	'Компания - VerumTrade', 
	'http://test.com'
	)

block main-content
	.company-page
		include includes/_company-snippet-3
		include includes/_company-snippet-1
		include includes/_company-snippet-2
		.fourth-block
			.container
				.row
					.col-sm-8
						h6.pre-headline Цель VerumTrade
						h2.page-headline Цель компании - построение 
							|
							br 
							| глобальной сети держателей 
							br
							| монет
						.flex-block
							.flex-item
								p Популяризация собственной 
									br
									| валюты и собственной биржи, 
									br
									| партнерство с другими 
									br
									| глобальными площадками 
									br
									| и взаимодействие с рынком 
									br
									| коммерции.
							.flex-item
								p Все средства 
									br
									| инвестора распределяются 
									br
									| в разные направления, 
									br
									| где приносят краткосрочную 
									br
									| или долгосрочную 
									br
									| прибыль.
							.flex-item
								p Для скорейшего достижения 
									br
									| поставленных целей, компания 
									br
									| внедрила многоуровненвый 
									br
									| маркетинг.
							.flex-item
								p Сама прибыль варьируется от 
									br
									| успешности сделок компании 
									br
									| в течение отведенного 
									br
									| периода.
					.col-sm-4
		.faq-page
			.container
				include includes/_faq-snippet
		.sixth-block
			.container
				.feedback-block
					h6.pre-headline Обратная связь
					+feedback-block-headline("Остались вопросы?")
					+feedback-block-content("Свяжитесь с нами через форму обратной связи")
					+button-name("Задать вопрос")